@using Microsoft.AspNetCore.Identity
@using SMSAssignment.Models
@inject SignInManager<Student> SignInManager
@inject UserManager<Student> UserManager

@{
    Student? currentUser = null;

    if (SignInManager.IsSignedIn(User))
        currentUser = await UserManager.GetUserAsync(User);
}

<!DOCTYPE html>
<html lang="en">



<head>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SRP</title>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />


    <!-- Google Font (Poppins like XD) -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600&display=swap" rel="stylesheet" />


    <!-- FontAwesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"  />


    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />


    @RenderSection("Styles", required: false)

    <style>
        .profile-icon img{
            width:35px;
            height:35px;
            border-radius:50%;
        }

    </style>


</head>



<body style="font-family: 'Poppins', sans-serif;">



    <!-- TOP NAVBAR -->
    <nav class="navbar navbar-light bg-white border-bottom px-4 py-2 shadow-sm">

        <div class="container-fluid">


            <!-- Brand -->
            <a class="navbar-brand fw-bold fs-4" asp-controller="Home" asp-action="Index">SRP</a>


            <!-- Center Search -->
            <form class="d-none d-md-flex mx-auto" style="width: 380px;">

                <div class="input-group input-group-sm">

                    <span class="input-group-text bg-light border-end-0">
                        <i class="fas fa-search"></i>
                    </span>

                    <input class="form-control border-start-0" type="text" placeholder="Search..." />

                </div>
            
            </form>


            <!-- User Profile -->
            <div class="dropdown">


                @if (currentUser != null)
                {
                    <a class="d-flex align-items-center text-dark text-decoration-none dropdown-toggle"
                       href="#" data-bs-toggle="dropdown">

                       <div class="rounded-5 profile-icon me-3">
                            <img src="/images/profile.jpg" alt="Alternate Text" />
                       </div>

                        <span class="me-2 fw-medium">@currentUser.FullName</span>
                        
                    </a>



                    <ul class="dropdown-menu dropdown-menu-end shadow-sm">
                        
                        <li>
                            <h6 class="dropdown-header">@currentUser.Email</h6>
                        </li>

                        <li><hr class="dropdown-divider" /></li>

                        <li>
                            <form method="post" asp-area="Identity" asp-page="/Account/Logout">
                                <button type="submit" class="dropdown-item">
                                    <i class="fas fa-sign-out-alt"></i> Logout
                                </button>
                            </form>
                        </li>
                    </ul>
                
                }
                else
                {
                    <a asp-area="Identity" asp-page="/Home/Index" class="btn btn-primary btn-sm">
                        Login
                    </a>
                }


            </div>
        
        </div>

    </nav>



    <!-- MAIN BODY -->
    <main class="container-fluid py-4">
        @RenderBody()
    </main>



    <!-- GLOBAL MODAL PLACEHOLDER -->
    <div id="globalModal"></div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    @RenderSection("Scripts", required: false)
</body>



</html>