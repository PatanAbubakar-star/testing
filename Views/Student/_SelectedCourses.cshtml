@model IEnumerable<SMSAssignment.ViewModels.Student.CourseRowVM>

<div class="p-4"
     style="background:white; border-radius:14px;
            border:1px solid #e5e7eb; box-shadow:0 4px 20px rgba(0,0,0,0.04);">

    <!-- HEADER + SEARCH -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="fw-bold fs-6">Selected Courses</div>

        <div class="input-group input-group-sm" style="max-width:280px;">
            <input type="text" class="form-control border-0 bg-light" placeholder="Search..." />
            <span class="input-group-text bg-light border-0">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table mb-0" style="min-width:100%;">
            <thead style="background:#f8fafc; border-bottom:1px solid #e5e7eb;">
                <tr>
                    <th class="text-uppercase small fw-bold py-3">Course Name</th>
                    <th class="text-uppercase small fw-bold py-3">Course Description</th>
                    <th class="text-uppercase small fw-bold text-end py-3" style="width:140px;">
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var c in Model)
                    {
                        <tr style="border-bottom:1px solid #f1f1f1;">
                            <td class="fw-semibold py-3">@c.CourseName</td>
                            <td class="text-muted py-3">@c.Description</td>

                            <td class="text-end py-3">
                                <!-- Eye -->
                                <button type="button"
                                        class="btn btn-light btn-sm me-2"
                                        style="border:1px solid #e5e7eb;"
                                        title="View"
                                        onclick="openDetailsModal(@c.CourseId)">
                                    <i class="bi bi-eye"></i>
                                </button>

                                <!-- Trash -->
                                <button type="button"
                                        class="btn btn-light btn-sm"
                                        style="border:1px solid #e5e7eb;"
                                        title="Unregister"
                                        onclick="openUnregisterModal(@c.CourseId)">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            No selected courses.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="d-flex justify-content-between align-items-center pt-3">
        <span class="text-muted small">Showing 1 to X of entries</span>

        <div class="d-flex gap-2">
            <a href="javascript:void(0)"
               class="btn btn-sm"
               style="border:1px solid #e5e7eb; background:#fff; font-weight:600;">
                1
            </a>
        </div>
    </div>

</div>