@model IEnumerable<SMSAssignment.ViewModels.Student.CourseRowVM>

<!-- WRAPPER CARD -->
<div class="p-4"
     style="background:white; border-radius:14px;
            border:1px solid #e5e7eb; box-shadow:0 4px 20px rgba(0,0,0,0.04);">

    <!-- HEADER + SEARCH -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="fw-bold fs-6">Courses List</div>

        <div class="input-group input-group-sm" style="max-width:280px;">
            <input type="text" class="form-control border-0 bg-light" placeholder="Search..." />
            <span class="input-group-text bg-light border-0">
                <i class="bi bi-search"></i>
            </span>
        </div>
    </div>

    <!-- TABLE -->
    <div class="table-responsive">
        <table class="table mb-0" style="min-width:100%;">
            <thead style="background:#f8fafc; border-bottom:1px solid #e5e7eb;">
                <tr>
                    <th class="text-uppercase small fw-bold py-3">Course Name</th>
                    <th class="text-uppercase small fw-bold py-3">Course Description</th>
                    <th class="text-uppercase small fw-bold text-end py-3" style="width:120px;">
                        Action
                    </th>
                </tr>
            </thead>

            <tbody>
                @if (Model != null && Model.Any())
                {
                    foreach (var c in Model)
                    {
                        <tr style="border-bottom:1px solid #f1f1f1;">
                            <td class="fw-semibold py-3">@c.CourseName</td>
                            <td class="text-muted py-3">@c.Description</td>

                            <td class="text-end py-3">

                                <a href="javascript:void(0)"
                                   class="fw-bold text-decoration-none"
                                   onclick="openEnrollModal(@c.CourseId, '@(c.CourseName.Replace("'", "\\'"))')">
                                    Select
                                </a>

                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="3" class="text-center text-muted py-4">
                            No courses available.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- PAGINATION -->
    <div class="d-flex justify-content-between align-items-center pt-3">
        <span class="text-muted small">Showing 1 to 5 of X entries</span>

        <div class="d-flex gap-2">
            <a href="javascript:void(0)"
               class="px-3 py-1 rounded-3 fw-semibold border text-decoration-none text-dark"
               style="background:#f8f9fa;">1</a>

            <a href="javascript:void(0)"
               class="px-3 py-1 rounded-3 border text-decoration-none text-dark"
               style="background:#f8f9fa;">2</a>

            <a href="javascript:void(0)"
               class="px-3 py-1 rounded-3 border text-decoration-none text-dark"
               style="background:#f8f9fa;">3</a>
        </div>
    </div>

</div>