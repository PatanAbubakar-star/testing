@model SMSAssignment.Models.Course

@await Html.PartialAsync("_AdminStyles")



<div class="admin-page py-4">

    <div class="container-fluid admin-container">

        <!-- Course + Schedule Form -->
        <div class="admin-card admin-card-section">
            <!-- CourseForm -->
            @await Html.PartialAsync("Partials/_CourseForm")

            <hr class="my-4 admin-divider" />

            <!-- Schedule Form -->
            @await Html.PartialAsync("Partials/_ScheduleForm")
        </div>

        <!-- Schedule List-->
        <div class="admin-card admin-card-section mt-4">

            <div id="scheduleList" class="mt-3">
                @await Html.PartialAsync(
                "Partials/_ScheduleTable",
                                Model?.CourseSchedules ?? Enumerable.Empty<SMSAssignment.Models.CourseSchedule>()
                                )
            </div>
        </div>
        <div class=" d-flex justify-content-center w-100">
            <a class="btn btn-primary text-center mt-4" asp-controller="Admin" asp-action="Index"> Go Back to Courses</a>
        </div>
        
    </div>
        
        
</div>



@await Html.PartialAsync("_AdminCreateScripts")

@Html.AntiForgeryToken()

