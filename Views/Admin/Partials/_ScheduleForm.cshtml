<div class="admin-card-section">

    <h4 class="admin-card-title mb-3 fw-bold">Add Schedule</h4>

    <div class="row g-4 align-items-end">

        <!-- DATE -->
        <div class="col-12 col-md-4">
            <label class="admin-label">Select Date</label>
            <input type="date"
                   id="scheduleDate"
                   class="form-control admin-input"
                   placeholder="dd-mm-yyyy" />
        </div>

        <!-- START TIME -->
        <div class="col-12 col-md-4">
            <label class="admin-label">Start Time</label>
            <input type="time"
                   id="startTime"
                   class="form-control admin-input" />
        </div>

        <!-- END TIME -->
        <div class="col-12 col-md-4">
            <label class="admin-label">End Time</label>
            <input type="time"
                   id="endTime"
                   class="form-control admin-input" />
        </div>

    </div>

    <!-- MESSAGE + BUTTON -->
    <div class="d-flex justify-content-between align-items-center mt-3">
        <div class="w-100">
            <div id="scheduleMessage" class="small d-none"></div>
        </div>
        

        <button class="btn btn-success admin-btn-success w-25"
                id="addScheduleBtn">
            Add Schedule
        </button>

    </div>

</div>