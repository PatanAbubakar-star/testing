@model IEnumerable<SMSAssignment.Models.Course>

<div class="table-responsive">
    <table class="table admin-table align-middle mb-0">

        <thead>
            <tr>
                <!-- Headers use the uppercase, muted style from your CSS -->
                <th class="ps-4">COURSE NAME</th>
                <th>COURSE DESCRIPTION</th>
                <th class="text-center">NO OF DAYS IN WEEK</th>
                <th class="text-center">TIME</th>
                <th class="text-center">ACTION</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var c in Model)
            {
                <tr>
                    <!-- Course Name is bold and dark like the image -->
                    <td class="ps-4 fw-bold text-dark">@c.CourseName</td>

                    <!-- Description uses muted color for secondary info -->
                    <td class="text-muted">@c.Description</td>

                    <td class="text-center">@c.NoOfDays</td>

                    <td class="text-center">
                        @(c.CourseSchedules != null && c.CourseSchedules.Any()
                                            ? c.CourseSchedules.First().StartTime.ToString(@"hh\:mm")
                                            : "-")
                    </td>

                    <td class="text-center">

                        <div class="d-flex justify-content-center gap-1">
                            
                            <!-- Clean pencil icon without background -->
                            <a href="/Admin/Edit/@c.CourseId"
                               class="admin-icon-btn"
                               title="Edit">
                                <i class="fas fa-pencil-alt"></i>
                            </a>

                            <!-- Trash icon turns red only on hover via CSS -->
                            <a href="javascript:void(0)"
                               class="admin-icon-btn delete"
                               onclick="openDeleteModal(@c.CourseId)"
                               title="Delete">
                                <i class="fas fa-trash"></i>
                            </a>
                        
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    
    </table>
</div>

<!-- Modal logic remains unchanged for your backend integration -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-confirm">
        <div class="modal-content border-0">
            <div class="modal-header flex-column text-center bg-danger text-white rounded-top">
                <i class="fas fa-exclamation-triangle fa-3x mb-2"></i>
                <h4 class="modal-title w-100">Are you sure?</h4>
            </div>
            <div class="modal-body text-center p-4">
                <p class="text-muted">Do you really want to delete this course? This action cannot be undone.</p>
            </div>
            <div class="modal-footer justify-content-center border-0 pb-4">
                <button type="button" class="btn btn-secondary px-4" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger px-4" id="confirmDeleteBtn">Delete</button>
            </div>
        </div>
    </div>
</div>
