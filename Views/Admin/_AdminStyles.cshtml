<style>
    :root {
        --bg: #f8fafc;
        --card: #ffffff;
        --border: #f1f5f9;
        --text: #111827;
        --muted: #64748b;
        --primary: #007bff; /* Vibrant Blue from image */
        --shadow: 0 10px 25px -5px rgba(0, 0, 0, 0.04), 0 8px 10px -6px rgba(0, 0, 0, 0.04);
        --radius: 4px;
    }

    /* Page background & Font */
    body, .admin-body {
        background: var(--bg);
        color: var(--text);
        font-family: "Montserrat", -apple-system, sans-serif;
    }

    .admin-page {
        padding: 40px 20px;
    }

    /* Container width matching dashboard */
    .admin-container {
        max-width: 1200px;
        margin: 0 auto;
    }

    /* Main Card styling matching the image */
    .admin-card {
        background: var(--card);
        border: 1px solid rgba(0,0,0,0.02); /* Almost invisible border */
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 30px;
    }

    /* Card Title */
    .admin-title {
        font-size: 16px;
        font-weight: 700;
        margin: 0;
        color: var(--text);
    }

    /* Subtle Search box */
    .admin-search {
        position: relative;
        width: 240px;
    }

        .admin-search i {
            position: absolute;
            left: 12px;
            top: 50%;
            transform: translateY(-50%);
            color: #94a3b8;
            font-size: 13px;
            pointer-events: none;
        }

        .admin-search input {
            width: 100%;
            padding: 8px 12px 8px 35px;
            height: 38px;
            border-radius: 4px;
            border: 1px solid #f1f5f9;
            font-size: 13px;
            background: #fdfdfd;
            color: var(--text);
            transition: all 0.2s;
        }

            .admin-search input:focus {
                outline: none;
                border-color: var(--primary);
                box-shadow: 0 0 0 3px rgba(0, 123, 255, 0.1);
                background: #fff;
            }

    
    .admin-btn {
        background: var(--primary);
        color: #fff;
        border-radius: 4px;
        padding: 8px 24px;
        font-size: 13px;
        font-weight: 700;
        border: none;
        transition: filter 0.2s;
    }

        .admin-btn:hover {
            filter: brightness(1.1);
            color: white;
        }

    /* Table Typography & Borders */
    .admin-table {
        width: 100%;
        margin-top: 10px;
    }

        .admin-table thead th {
            color: var(--text);
            font-weight: 800; /* Bold headers like image */
            font-size: 12px;
            background-color: #f8fafc !important;
            letter-spacing: .05em;
            text-transform: uppercase;
            padding: 15px 12px !important;
            border-bottom: 2px solid #f8fafc !important;
        }

        .admin-table tbody td {
            padding: 20px 12px !important; /* Increased spacing for airy feel */
            border-bottom: 1px solid #f1f5f9 !important;
            font-size: 14px;
            color: #4b5563;
            vertical-align: middle;
        }

        .admin-table tbody tr:last-child td {
            border-bottom: none !important; /* Last row clean finish */
        }

    
    .admin-icon-btn {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 34px;
        height: 34px;
        color: #111827; 
        font-size: 1rem;
        transition: all 0.2s;
        text-decoration: none;
        border-radius: 6px;
    }

        .admin-icon-btn:hover {
            background: #f8fafc;
            color: var(--primary);
        }

        .admin-icon-btn.delete:hover {
            color: #dc2626;
        }

   
    .modal-confirm .modal-content {
        border-radius: 12px;
    }
</style>
